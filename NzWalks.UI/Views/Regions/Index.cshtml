@model IEnumerable<NzWalks.UI.Models.DTO.RegionDto>


@*@if (ViewBag.Response is not null)
{
    <p>@ViewBag.Response</p>
}*@

<section class="d-flex justify-content-between align-items-baseline mb-3">
    <div class="d-flex">
        <h1 class="mt-3">Regions</h1>
    </div>

    <div class="d-flex justify-content-end">
        <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
    </div>
</section>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a class="btn btn-light"
                       asp-controller="Regions"
                       asp-action="Edit"
                       asp-route-id="@region.Id"
                    >
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>